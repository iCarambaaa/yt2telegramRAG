# Enhanced Telegram Service Configuration Example
# Copy this to your .env file and update with your actual values

# Primary Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Additional Telegram Bots (for multiple chat support)
TELEGRAM_BOT_TOKEN_2=second_bot_token_here
TELEGRAM_CHAT_ID_2=second_chat_id_here
TELEGRAM_CHAT_NAME_2=Second Chat Name

TELEGRAM_BOT_TOKEN_3=third_bot_token_here
TELEGRAM_CHAT_ID_3=third_chat_id_here
TELEGRAM_CHAT_NAME_3=Third Chat Name

# Webhook Configuration
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
# Chat-specific webhook URLs (optional)
TELEGRAM_WEBHOOK_URL_your_chat_id_here=https://your-domain.com/webhook/telegram/your_chat_id_here

# Message Queue Configuration
MESSAGE_QUEUE_DB_PATH=gui/data/message_queue.db
MESSAGE_QUEUE_MAX_RETRIES=3
MESSAGE_QUEUE_CLEANUP_DAYS=7

# Service Configuration
TELEGRAM_SERVICE_ENABLED=true
TELEGRAM_QNA_ENABLED=true
TELEGRAM_WEBHOOK_ENABLED=true

# Rate Limiting
TELEGRAM_RATE_LIMIT_MESSAGES_PER_MINUTE=20
TELEGRAM_RATE_LIMIT_BURST_SIZE=5

# Logging
LOG_LEVEL=INFO
TELEGRAM_LOG_LEVEL=INFO